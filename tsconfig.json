{
  "compilerOptions": {
    "target": "es6",                  // Compile to ES6 JavaScript
    "module": "esnext",               // Use ES modules (import/export)
    "strict": true,                   // Enable strict type checking
    "esModuleInterop": true,          // Support import of CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",               // Put compiled JS files in 'dist' folder
    "rootDir": "./src",               // Source TS files are in 'src' folder
    "moduleResolution": "node",       // How modules get resolved
    "skipLibCheck": true              // Skip checking libraries for faster compile
  },
  "include": ["src/**/*"],            // Include all TS files under 'src'
  "exclude": ["node_modules"]         // Exclude dependencies
}
